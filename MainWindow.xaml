<Window x:Class="Vizprog_gyak09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vizprog_gyak09"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <xctk:WatermarkTextBox x:Name="tbTeszt1" Grid.Row="0" Grid.Column="0" HorizontalAlignment="center" VerticalAlignment="center" Width="200" Watermark="Ide írjon be szöveget"/>
        <xctk:WatermarkTextBox x:Name="tbTeszt2" Grid.Row="1" Grid.Column="0" HorizontalAlignment="center" VerticalAlignment="center" Width="200" Watermark="Ide írjon be szöveget"/>
        <xctk:MaskedTextBox x:Name="_maskedTextBox" Mask="+36 (00) 000 0000" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200"/>
    </Grid>
</Window>
